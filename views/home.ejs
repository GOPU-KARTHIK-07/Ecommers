<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-dark bg-dark mb-3">
        <a class="navbar-brand" href="#">
            <img src="/docs/4.3/assets/brand/bootstrap-solid.svg" width="30" height="30"
                class="d-inline-block align-top" alt="">
            Bootstrap
        </a>
        <a href="/inputprod" class="btn btn-outline-primary">Add new product</a>
    </nav>

    <div class="container">
        <div class="row">
            <% products.forEach(product=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="https://mdbootstrap.com/img/new/standard/nature/111.webp" class="card-img-top"
                            alt="Nature Image">
                        <div class="card-body">
                            <h5 class="card-title" id="card-title">
                                <%= product.prodname %>
                            </h5>
                            <h6>COST: <%= product.cost %>
                            </h6>
                            <p class="card-text">
                                <%= product.description %>
                            </p>
                        </div>
                        <div class="card-body">
                            <a href="#" class="card-link btn btn-warning">
                                <i class="bi bi-pencil-square mr-1"></i> Edit
                            </a>
                            <a href="#" class="btn btn-danger d-flex-col align-items-center"
                                onclick="deleteProduct('<%=product._id %>')">
                                <i class="bi bi-trash mr-1"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
<script>
    async function deleteProduct(id) {
        try {
            const response = await fetch(`/product/${id}`, { method: 'DELETE' });
            if (response.ok) {
                alert('Product deleted successfully');
                location.reload(); // Refresh the page to reflect the changes
            } else {
                alert('Failed to delete product');
            }
        } catch (error) {
            console.error('Error deleting product:', error);
            alert('Error deleting product');
        }
    }
</script>

</html>
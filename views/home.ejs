<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-dark bg-dark mb-3">
        <a class="navbar-brand" href="#">
         
            E commers home Page Ra Babu
        </a>
        <a href="/inputprod" class="btn btn-outline-primary">Add new product</a>
    </nav>

    <div class="container">
        <div class="row">
            <% products.forEach(product=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="https://mdbootstrap.com/img/new/standard/nature/111.webp" class="card-img-top"
                            alt="Nature Image">
                        <div class="card-body">
                            <h5 class="card-title" id="card-title">
                                <%= product.prodname %>
                            </h5>
                            <h6>COST: <%= product.cost %>
                            </h6>
                            <p class="card-text">
                                <%= product.description %>
                            </p>
                        </div>
                        <div class="card-body">
                            <a href="#" class="card-link btn btn-warning" data-toggle="modal"
                                data-target="#updateProductModal" onclick="fillUpdateForm('<%= product._id %>', '<%= product.prodname %>', '<%= product.cost %>', '<%= product.description %>')">
                                <i class="bi bi-pencil-square mr-1"></i> Edit
                            </a>
                            <a href="#" class="btn btn-danger d-flex-col align-items-center"
                                onclick="deleteProduct('<%=product._id %>')">
                                <i class="bi bi-trash mr-1"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <!-- Update Product Modal -->
    <div class="modal fade" id="updateProductModal" tabindex="-1" role="dialog" aria-labelledby="updateProductModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateProductModalLabel">Update Product</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="updateProductForm">
                        <input type="hidden" id="updateProductId">
                        <div class="form-group">
                            <label for="updateProductName">Product Name</label>
                            <input type="text" class="form-control" id="updateProductName" required>
                        </div>
                        <div class="form-group">
                            <label for="updateProductCost">Cost</label>
                            <input type="number" class="form-control" id="updateProductCost" required>
                        </div>
                        <div class="form-group">
                            <label for="updateProductDescription">Description</label>
                            <textarea class="form-control" id="updateProductDescription" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
<script>
    async function deleteProduct(id) {
        try {
            const response = await fetch(`/product/${id}`, { method: 'DELETE' });
            if (response.ok) {
                alert('Product deleted successfully');
                location.reload();
            } else {
                alert('Failed to delete product');
            }
        } catch (error) {
            console.error('Error deleting product:', error);
            alert('Error deleting product');
        }
    }

    function fillUpdateForm(id, name, cost, description) {
        document.getElementById('updateProductId').value = id;
        document.getElementById('updateProductName').value = name;
        document.getElementById('updateProductCost').value = cost;
        document.getElementById('updateProductDescription').value = description;
    }

    document.getElementById('updateProductForm').addEventListener('submit', async function (event) {
        event.preventDefault();
        const id = document.getElementById('updateProductId').value;
        const name = document.getElementById('updateProductName').value;
        const cost = document.getElementById('updateProductCost').value;
        const description = document.getElementById('updateProductDescription').value;

        try {
            const response = await fetch(`/product/${id}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ prodname: name, cost: cost, description: description })
            });
            if (response.ok) {
                alert('Product updated successfully');
                location.reload();
            } else {
                alert('Failed to update product');
            }
        } catch (error) {
            console.error('Error updating product:', error);
            alert('Error updating product');
        }
    });
</script>

</html>










